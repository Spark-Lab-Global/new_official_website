---
import "@/styles/global.css";
import { Font } from "astro:assets";
import TitleBar from "@/components/layout/TitleBar.tsx";
import Footer from "@/components/layout/Footer.tsx";
import {
  getLangFromUrl,
  useTranslations,
  useTranslatedPath,
} from "@/i18n/utils";

const currentPath = Astro.url.pathname;

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const translatePath = useTranslatedPath(lang);

const metadata = {
  title: "Spark Lab",
  description: "A home where hackers, artists, and builders belong",
  url: "https://staging.sparklab.city",
  author: "Spark Lab",
  keywords:
    "spark lab, young builders, creative renaissance, tech innovation, hacker house, artist community, startup accelerator, builder platform, creative entrepreneurs, innovation ecosystem, young founders, gap year, dropout founders",
  type: "website",
};
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />

    <!-- SEO Meta Tags -->
    <title>{metadata.title}</title>
    <meta name="description" content={metadata.description} />
    <meta name="keywords" content={metadata.keywords} />
    <meta name="author" content={metadata.author} />
    <link rel="canonical" href={metadata.url + currentPath} />

    <!-- Open Graph -->
    <meta property="og:title" content={metadata.title} />
    <meta property="og:site_name" content={metadata.title} />
    <meta property="og:url" content={metadata.url + currentPath} />
    <meta property="og:description" content={metadata.description} />
    <meta property="og:type" content={metadata.type} />

    <!-- Robots -->
    <meta
      name="robots"
      content="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1"
    />
    <meta name="googlebot" content="index, follow" />

    <!-- Fonts -->
    <Font cssVariable="--font-title" preload />
    <Font cssVariable="--font-body" preload />
  </head>
  <body>
    <TitleBar currentPath={currentPath} t={t} translatePath={translatePath} />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
