---
import Next from "@/components/ui/Next";
import Layout from "@/layouts/Layout.astro";
import C1 from "@/sections/portfolio/C1";
import C2 from "@/sections/portfolio/C2";
// import C3 from "@/sections/zh/portfolio/C3";
// import C4 from "@/sections/zh/portfolio/C4";

import { getImage } from "astro:assets";
import c2_a from "@/assets/c2/a.svg";

import {
  getLangFromUrl,
  useTranslations,
  useTranslatedPath,
} from "@/i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const translatePath = useTranslatedPath(lang);

const c2_a_Image = await getImage({
  src: c2_a,
  format: "svg",
});
---

<Layout>
  <div class="flex flex-col gap-20 pt-30">
    <C1 t={t} />
    <C2 t={t} imageSrc={c2_a_Image.src} />
    <!-- <C3 />
    <C4 /> -->
  </div>
  <Next title="People" href={translatePath("/people")} />
</Layout>
