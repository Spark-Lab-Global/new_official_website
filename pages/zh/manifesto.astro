---
import Next from "@/components/ui/Next";
import Layout from "@/layouts/Layout.astro";
import B1 from "@/sections/manifesto/B1";
import B2 from "@/sections/manifesto/B2";
import B3 from "@/sections/manifesto/B3";
// import B4 from "@/sections/zh/manifesto/B4";

import {
  getLangFromUrl,
  useTranslations,
  useTranslatedPath,
} from "@/i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const translatePath = useTranslatedPath(lang);
---

<Layout>
  <div class="flex flex-col gap-10 pt-30">
    <B1 t={t} />
    <B2 t={t} />
    <B3 t={t} />
    <!-- <B4 /> -->
  </div>
  <Next title="Portfolio" href={translatePath("/portfolio")} />
</Layout>
